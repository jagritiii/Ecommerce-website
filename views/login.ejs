<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/authenticate.css" />
    <title>Login</title>
  </head>
  <body>
    <div class="main">
      <div class="loginBox">
        <div id="msg"><%= msg %></div>
        <h1 class="head">User Login</h1>
        <form action="/login" method="post">
          <p>
            Username:
            <input type="email" placeholder="enter email" name="email" />
          </p>
          <p></p>
          <p>
            Password:
            <input
              type="password"
              placeholder="enter password"
              name="password"
            />
          </p>
          <p></p>
          <p><input type="submit" value="login" /></p>
          <p>
            <button><a href="/forgotPassword"> forgot Password</a></button>
          </p>
          <p>
            New User ?
            <button><a href="/signup"> Create account </a></button>
          </p>
          <p>
            <button>
              <a id="adminlogin" href="/admin/login"> admin login</a>
            </button>
          </p>
        </form>
      </div>
    </div>
  </body>
  <script>
    setTimeout(function () {
      var message = document.getElementById("msg");
      message.style.display = "none";
    }, 3000);
  </script>
</html>
